{% schema %}
{
  "name": "Ui kit",
  "class": "section section-ui-kit",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_heading",
      "default": true,
      "label": "Show heading"
    },
    {
      "type": "richtext",
      "id": "heading",
      "default": "<p>Ui kit <em>Heading</em></p>",
      "label": "Add heading text"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "m",
          "label": "m"
        },
        {
          "value": "l",
          "label": "l"
        },
        {
          "value": "xl",
          "label": "xl"
        },
        {
          "value": "xxl",
          "label": "xxl"
        }
      ],
      "default": "xl",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        }
      ],
      "default": "left"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Ui kit Description</p>"
    }
  ]
}
{% endschema %}