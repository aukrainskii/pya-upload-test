{% liquid
  render 'sec-heading'
  render 'sec-description'
%}

{% capture checkboxes %}
  <fieldset class="ui-kit-elements-wrap ui-kit-elements-wrap--short">
    <legend>kit checkboxes</legend>
    {% render 'checkbox', label: 'checkbox' %}
    {% render 'checkbox', label: 'checkbox with very-very and very-very long label' %}
    {% render 'checkbox', label: 'withveryverylonglabelwithoutspacingsbetweenwords' %}
    {% render 'checkbox', label: 'with value', value: 'same-value' %}
    {% render 'checkbox', label: 'checked', checked: true %}
    {% render 'checkbox', label: 'disabled', disabled: true %}
    {% render 'checkbox', label: 'checked & disabled', checked: true, disabled: true %}
  </fieldset>
{% endcapture %}

{% capture radiobuttons %}
  <fieldset class="ui-kit-elements-wrap ui-kit-elements-wrap--short">
    <legend>kit radio buttons</legend>
    {% render 'radio', label: 'radio' %}
    {% render 'radio', label: 'radio with very-very and very-very long label' %}
    {% render 'radio', label: 'withveryverylonglabelwithoutspacingsbetweenwords' %}
    {% render 'radio', label: 'with value', value: 'same-value' %}
    {% render 'radio', label: 'checked', checked: true %}
    {% render 'radio', label: 'disabled', disabled: true %}
    {% render 'radio', label: 'checked & disabled', checked: true, disabled: true, name: 'disabled-name' %}
  </fieldset>
{% endcapture %}

{% capture buttons %}
  <fieldset class="ui-kit-elements-wrap">
    <legend>kit buttons</legend>
    {% render 'button', text: 'base' %}
    {% render 'button', text: 'base disabled', disabled: true %}
    
    {% render 'button', class: 'button--primary', text: 'primary' %}
    {% render 'button', class: 'button--primary', text: 'primary disabled', disabled: true %}
    
    {% render 'button', class: 'button--accent', text: 'accent' %}
    {% render 'button', class: 'button--accent', text: 'accent disabled', disabled: true %}

    {% render 'button', class: 'button--primary', text: 'primary submit', type: 'submit' %}

    {% render 'button', text: 'link', tag: 'link' %}
    {% render 'button', text: 'link disabled', disabled: true, tag: 'link' %}

    {% render 'button', class: 'button--primary', text: 'link primary', tag: 'link' %}
    {% render 'button', class: 'button--primary', text: 'link primary disabled', disabled: true, tag: 'link' %}

    {% capture icon_account %}
      {% render 'icon-account' %}
    {% endcapture %}
    {% render 'button', text: 'with icon', icon: icon_account %}
    {% render 'button', class: 'button--primary', text: 'icon after', icon: icon_account, icon_position: 'after', disabled: true %}
    {% render 'button', class: 'button--accent', text: 'link with icon', icon: icon_account %}
  </fieldset>
{% endcapture %}

{% capture special_arrow %}
  {% render 'icon-account' %}
{% endcapture %}

{%- capture selects -%}
<fieldset class="ui-kit-elements-wrap">
  <legend>kit selects</legend>
  {% render 'select' %}
  {% render 'select', multiple: true %}
  {% render 'select', disabled: true %}
  {% render 'select', multiple: true, disabled: true, size: 8 %}
  {% render 'select', icon: special_arrow %}
</fieldset>
{% endcapture %}

{%- capture textareas -%}
<fieldset class="ui-kit-elements-wrap">
  <legend>kit textareas</legend>
  {% render 'textarea', placeholder: ' ' %}
  {% render 'textarea', disabled: true, content: 'disabled' %}
  {% render 'textarea', readonly: true, content: 'readonly' %}
</fieldset>
{% endcapture %}

