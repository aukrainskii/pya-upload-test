{% assign sec_id = section.id | slice: -6, 6 | replace: '-', '_' %}
{% assign sec_id = sec_id | prepend: 'pw' %}

{% style %}

:root {
  --main-custom-bg: url({{ section.settings.background | image_url: width: 1000 }});
}

#shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.section_padding_top_m }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_m }}px;
  }

@media screen and (min-width: 600px) {
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.section_padding_top_t }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_t }}px;
  }
}

@media screen and (min-width: 1240px) {
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.section_padding_top_d }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_d }}px;
  }
}

.kava-banner-theme .breadcrumbs {
  margin-top: 26px;
  margin-bottom: 26px;
}

.kava-banner-theme .kava-banner {
  padding: 60px 50px 200px;
  overflow: hidden;
}
.kava-banner-theme .kava-banner-inner::before,
.kava-banner-theme .kava-banner-inner::after {
  content: '';
  position: absolute;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

.kava-banner-theme .kava-banner-inner::before {
  width: 370px;
  height: 309px;
  top: 0px;
  left: -40%;
  background-image: url(https://cdn.shopify.com/s/files/1/0717/0831/1865/files/kava-banner-img-left_2x_7188d337-603a-45ae-b6ab-4e46574492b9.png);
}

.kava-banner-theme .kava-banner-inner::after {
  width: 467px;
  height: 285px;
  top: 0px;
  right: -52%;
  background-image: url(https://cdn.shopify.com/s/files/1/0717/0831/1865/files/kava-banner-img-right_2x_d3a38777-559e-46e5-be30-544f6bce67c8.png);
}

.kava-banner-theme .kava-banner-img {
  display: none;
}

.kava-banner-theme .kava-banner-content {
  max-width: 620px;
}



@media screen and (max-width: 992px) {
  .kava-banner-theme .kava-banner {
    padding: 40px;
  }
}

@media screen and (max-width: 750px) {
  .kava-banner-theme .kava-banner-inner::before,
  .kava-banner-theme .kava-banner-inner::after {
    display: none;
  }
  .kava-banner-theme .kava-banner-img {
    display: block;
  }
}

@media screen and (max-width: 490px) {
  .kava-banner-theme .kava-banner {
    padding: 24px;
  }
}

.theme-page-wrapper {
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.theme-page-image {
  border: 10px solid rgba(255,255,255,0.5);
  border-radius: 12px;
  margin-top: -150px;
  margin-bottom: 64px;
  margin-left: -10px;
  margin-right: -10px;
  position: relative;
  overflow: hidden;
}

.theme-page-image img {
  display: block;
}

.theme-page-title {
  font-size: 48px;
  line-height: 1.2;
  font-weight: 700;
  margin-top: 0;
  margin-bottom: 32px;
}

.theme-page-wrapper {
  color: #4c4c4c;
}

.theme-page-wrapper h1,
.theme-page-wrapper h2,
.theme-page-wrapper h3,
.theme-page-wrapper h4,
.theme-page-wrapper h5,
.theme-page-wrapper h6 {
  color: #202020;
  font-weight: 700;
  line-height: 1.2;
  margin-top: 0;
  margin-bottom: 20px;
}

.theme-page-wrapper b {
  color: #202020;
  font-weight: 700;
}

.theme-page-wrapper h2 {
  font-size: 36px;
  margin-bottom: 20px;
}

.theme-page-wrapper h3 {
  font-size: 24px;
  margin-bottom: 20px;
}

.theme-page-wrapper p {
  font-size: 20px;
  line-height: 1.5;
  margin-bottom: 24px;
}

.theme-page-wrapper ul {
  margin: 16px 0;
  padding: 24px;
  background-color: #F5F7FF;
  border-radius: 8px ;
}

.theme-page-wrapper ul li {
  font-size: 20px;
  line-height: 1.5;
  margin-bottom: 8px;
  position: relative;
  padding-left: 22px;
}

.theme-page-wrapper ul li::before {
  content: '';
  width: 4px;
  height: 4px;
  border-radius: 50%;
  position: absolute;
  top: 13px;
  left: 0;
  background: linear-gradient(91.66deg, #008950 -51.85%, #00E276 158.48%);
}

@media screen and (max-width: 992px) {
  .theme-page-image {
    margin-top: 30px;
    margin-bottom: 44px;
    margin-left: 0;
    margin-right: 0;
    border-width: 0;
    border-radius: 8px;
  }
}

@media screen and (max-width: 750px) {

  .theme-page-title {
    font-size: 40px;
    margin-bottom: 24px;
  }

  .theme-page-wrapper h2 {
    font-size: 32px;
  }

  .theme-page-wrapper h3 {
    font-size: 20px;
    margin-bottom: 20px;
  }

  .theme-page-wrapper p {
    font-size: 16px;
    margin-bottom: 20px;
  }

  .theme-page-wrapper ul li {
    font-size: 16px;
    padding-left: 20px;
  }

  .theme-page-wrapper ul li::before {
    top: 10px;
  }
}


{% endstyle %}


{% assign content = product.content %}

{% assign url = "https://apps.shopify.com/kava-sections-page-builder?utm_medium=referral&utm_source=pickyourapp&utm_campaign=theme-page&utm_term=get-started-with-kava&utm_content=turbocharge-theme" %}

<div class="pw-section__{{sec_id}} kava-banner-theme">

  <div class="header-with-banner">
    {% render 'breadcrumbs' %}
    {% render 'kava-banner', url: url %}
  </div>

  <div class="theme-page-wrapper">

    {% if product %}
      <div class="theme-page-image">
        {% if product.featured_image != blank %}
          {%- capture sizes -%}(min-width: 750px) 800px,(min-width: 480px) 590px, 360px{%- endcapture -%}
          {{ product.featured_image | image_url: width: 800 | image_tag:
            width: '100%',
            height: '100%',
            loading: 'lazy',
            sizes: sizes,
            widths: '360, 590, 720, 1180',
            alt: product.title
          }}
        {% endif %}
      </div>
    {% endif %}

    <div class="theme-page-content">

      {%- if product.title != blank -%}
        <h1 class="theme-page-title">
          {{ product.title }}
        </h1>
      {%- endif -%}

      {{content}}

    </div>

  </div>

</div>


