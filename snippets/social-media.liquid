{% liquid 
    assign list_class = class | default: ""
%}

 {%- if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_pinterest_link != blank or settings.social_instagram_link != blank or settings.social_telegram_link != blank or settings.social_tiktok_link != blank or settings.social_tumblr_link != blank or settings.social_snapchat_link != blank or settings.social_youtube_link != blank or settings.social_vimeo_link != blank or settings.social_whatsapp_link != blank or settings.social_linkedin_link != blank or settings.social_medium_link != blank or settings.social_amazon_link != blank -%}

